<script>
$(document).ready(function() {
  $('#search-form1').submit(function(event) {
    event.preventDefault();

    $.get("{{ path('app_zone_search') }}", $(this).serialize())
      .done(function(data) {
        $('#search-results-zone').empty(); // Vide tous les résultats de recherche existants
        data.forEach(function(zone) {
          // Vérifie si les propriétés existent avant de les utiliser
          var numRue = zone.numRue ? 'Numéro de Rue: ' + zone.numRue : 'Numéro de Rue non défini';
          var email = zone.ville ? 'Email: ' + zone.ville : 'Email non défini';
          // Crée une nouvelle site-section pour chaque résultat de recherche et l'ajoute à #search-results
          var siteSection = $('<div class="site-section"></div>');
          var container = $('<div class="container"></div>');
          var row = $('<div class="row mb-5"></div>');
          var col = $('<div class="col-md-6 mb-4"></div>');
          var card = $('<div class="card"></div>');
          var cardBody = $('<div class="card-body"></div>');

          var cardTitle = $('<p class="card-text"></p>').text(ville);
          var cardText1 = $('<p class="card-text"></p>').text(numRue);

          cardBody.append(cardTitle, cardText1);
          card.append(cardBody);
          col.append(card);
          row.append(col);
          container.append(row);
          siteSection.append(container);

          $('#search-results-zone').append(siteSection);
        });
      })
      .fail(function() {
        alert("Une erreur s'est produite lors de la recherche.");
      });
  });
});
