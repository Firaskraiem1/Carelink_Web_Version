{% extends 'base.html.twig' %}
{% block html %} 
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  {% block css %}
    {{ parent() }}
  {% endblock %}
</head>

<body>
{% block body %}
  <div class="site-wrap">

  {% block navbar %}
    {{ parent() }}
  {% endblock %}


    <div class="bg-light py-3">
      <div class="container">
        <div class="row">
          <div class="col-md-12 mb-0">
            <a href="index.html">Home</a> <span class="mx-2 mb-0">/</span> 
            <strong class="text-black">Cart</strong>
          </div>
        </div>
      </div>
    </div>

  {##############################################################}
  {#########################TABLE#################################}
  <div class="site-section">
      <div class="container">
          <div class="row">
              <div class="col-md-6">
                  <div class="row mb-2">
                      <div class="col-md-6 mb-3 mb-md-0">
                          <a href="{{ path('app_evenement_new') }}" class="btn btn-primary btn-md btn-block">Proposer évènement</a>
                      </div>
                  </div>
              </div>
          </div>
        <div class="site-section bg-light">
            <div class="container">
                <div class="row">
                    {% for evenement in evenements %}
                        {% if evenement.status == 'Approuvé' %}
                            <div class="col-md-4 mb-4">
                                <div class="bg-white" style="margin-left: 10px; margin-right: 10px; padding: 20px;">
                                    <a href="{{ path('app_evenement_show', {'id': evenement.id}) }}" class="d-block">
                                        <img src="{{ asset('path_to_your_event_image') }}" alt="Event Image">
                                        <h3 class="text-dark mt-3">{{ evenement.titreEvenement }}</h3>
                                        <p>{{ evenement.idCatEvenement.nomCategorie }}</p>
                                    </a>
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>
      </div>
  </div>




  {####################################################################}
  {############################FOOTER##################################}
  {% block footer %}
    {{ parent() }}
  {% endblock %}

  {% block js %}
    {{ parent() }}
  {% endblock %}

</body>
{% endblock %}
</html>
{% endblock %}
